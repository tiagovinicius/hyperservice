{
  "name": "service-a",
  "version": "1.0.0",
  "description": "Service A providing data",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "lint": "tsc",
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.cjs --platform=node --format=cjs",
    "start": "node dist/index.cjs",
    "build:watch": "esbuild src/index.ts --bundle --outfile=dist/index.cjs --platform=node --format=cjs --watch",
    "dev": "npm install && concurrently -k -n esbuild,node -c yellow,cyan \"npm:build:watch\" \"wait-on dist/index.cjs && npm run start\""
  },
  "dependencies": {
    "axios": "^1.5.0",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.3"
  }
}
